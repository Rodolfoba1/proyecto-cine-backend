# Puerto del servidor Express (Railway lo asigna automáticamente si no se define)
PORT=3000

# Configuración de base de datos MySQL
# En Railway, estas variables serán proporcionadas automáticamente
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=password
DB_NAME=cinema_db

# JWT (autenticación)
JWT_SECRET=tu_secret_muy_seguro
JWT_EXPIRES_IN=24h

# CORS: URL del frontend
# En producción, cambia esto a la URL de tu frontend desplegado
CLIENT_URL=http://localhost:3000